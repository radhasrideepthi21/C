#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#include <stdio.h>
int find_nth_term(int a, int b, int c, int n) {
    int sum;
    for (int i = 4; i <= n; i++) {
        sum = a + b + c;
        a = b;
        b = c;
        c = sum;
    }
    return n == 1 ? a : (n == 2 ? b : (n == 3 ? c : c));
}

int main() {
    int n, a, b, c;
    scanf("%d %d %d %d", &n, &a, &b, &c);
    int ans = find_nth_term(a, b, c, n);
    printf("%d\n", ans);

    return 0;
}
